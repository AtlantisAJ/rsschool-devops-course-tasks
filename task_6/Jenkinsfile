pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'task_6', url: 'https://github.com/AtlantisAJ/rsschool-devops-course-tasks'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-app:latest ./task_6'
            }
        }
    }
}
